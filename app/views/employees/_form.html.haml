= simple_form_for(employee, html: {class: 'form-horizontal' }) do |f|
  - if employee.errors.any?
    #error_explanation
      %h2
        = pluralize(@employee.errors.count, "error")
        prohibited this employee from being saved:
      %ul
        - @employee.errors.full_messages.each do |msg|
          %li= msg
  = f.input :first_name
  = f.input :last_name
  = f.input :rank, collection: [Employee::RANK[:admin], Employee::RANK[:employee]]
  = f.button :submit
